{
  "name": "mermaid-sequence-ui",
  "version": "0.0.0",
  "main": "electron-main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "app": "ng serve --host 0.0.0.0 --port 4200",
    "build": "ng build",
    "build:github-pages": "ng build --configuration github-pages",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron": "electron .",
    "electron:dev": "npm run build:electron && electron .",
    "build:electron": "ng build --configuration development --base-href ./",
    "build:electron:prod": "ng build --base-href ./",
    "package": "npm run build:electron:prod && electron-builder build",
    "package:win": "npm run build:electron:prod && electron-builder build --win",
    "package:mac": "npm run build:electron:prod && electron-builder build --mac",
    "package:linux": "npm run build:electron:prod && electron-builder build --linux"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "mermaid": "^11.12.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.3",
    "@angular/cli": "^20.3.3",
    "@angular/compiler-cli": "^20.3.0",
    "@types/jasmine": "~5.1.0",
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.9.2"
  },
  "build": {
    "appId": "com.mermaid-sequence-ui.app",
    "productName": "Mermaid Sequence Diagram UI",
    "directories": {
      "output": "release"
    },
    "files": [
      "electron-main.js",
      "dist/mermaid-sequence-ui/browser/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/favicon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    }
  }
}
